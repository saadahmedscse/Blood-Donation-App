<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="@color/colorLightRed"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/profile_bg"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dream Life Association"
            android:fontFamily="@font/quesha"
            android:textSize="34sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorLightRed"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingTop="3dp"
            android:text="অসহায় মানুষের পাশে দাঁড়ানোই আমাদের লক্ষ্য"
            android:fontFamily="@font/quesha"
            android:textSize="14sp"
            android:textColor="@color/colorLightRed"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Verification"
            android:fontFamily="@font/quesha"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="3dp"
            android:text="@string/verification_message"
            android:fontFamily="@font/quesha"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:gravity="center">

            <EditText
                android:id="@+id/otp_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:inputType="number"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/quesha"
                android:textSize="40sp"
                android:maxLength="1"
                android:background="@drawable/verification_bg"/>

            <EditText
                android:id="@+id/otp_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:inputType="number"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/quesha"
                android:textSize="40sp"
                android:maxLength="1"
                android:background="@drawable/verification_bg"/>

            <EditText
                android:id="@+id/otp_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:inputType="number"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/quesha"
                android:textSize="40sp"
                android:maxLength="1"
                android:background="@drawable/verification_bg"/>

            <EditText
                android:id="@+id/otp_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:inputType="number"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/quesha"
                android:textSize="40sp"
                android:maxLength="1"
                android:background="@drawable/verification_bg"/>

            <EditText
                android:id="@+id/otp_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:inputType="number"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/quesha"
                android:textSize="40sp"
                android:maxLength="1"
                android:background="@drawable/verification_bg"/>

            <EditText
                android:id="@+id/otp_6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:inputType="number"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/quesha"
                android:textSize="40sp"
                android:maxLength="1"
                android:background="@drawable/verification_bg"/>

        </LinearLayout>

        <Button
            android:id="@+id/verify_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Verify"
            android:textColor="@color/colorLightRed"
            android:fontFamily="@font/quesha"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textAllCaps="false"
            android:background="@drawable/input_bg"/>

        <ProgressBar
            android:id="@+id/verification_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/colorWhite"/>

    </LinearLayout>

</LinearLayout>