<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/donar_bg">

    <ImageView
        android:id="@+id/user_picture"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:src="@drawable/male"
        android:background="@drawable/oval"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/user_picture"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.25"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/quesha"
                android:textColor="@color/colorDarkRed"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/user_uid"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/user_number"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/user_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/quesha"
                android:textColor="@color/colorDarkRed"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/user_blood_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/quesha"
                android:textColor="@color/colorDarkRed"
                android:textSize="22sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Availability"
                    android:fontFamily="@font/quesha"
                    android:textColor="@color/colorDarkRed"
                    android:textSize="22sp"/>

                <LinearLayout
                    android:id="@+id/availability"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/sin"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/call_donar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:gravity="center"
                android:text="Call"
                android:fontFamily="@font/quesha"
                android:textColor="@color/colorWhite"
                android:textSize="22sp"
                android:background="@drawable/google"/>

            <TextView
                android:id="@+id/message_donar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:gravity="center"
                android:text="Message"
                android:fontFamily="@font/quesha"
                android:textColor="@color/colorWhite"
                android:textSize="22sp"
                android:background="@drawable/facebook"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>