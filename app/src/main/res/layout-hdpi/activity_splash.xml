        android:textStyle="bold"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Association"
        android:fontFamily="@font/quesha"
        android:textSize="60sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"/>

