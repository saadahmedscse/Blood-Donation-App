<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLightRed"
    tools:context=".CreatePostActivity">

    <LinearLayout
        android:id="@+id/nnnn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dream Life Association"
            android:fontFamily="@font/quesha"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="অসহায় মানুষের পাশে দাঁড়ানোই আমাদের লক্ষ্য"
            android:fontFamily="@font/quesha"
            android:textSize="17sp"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nnnn"
        android:paddingTop="35dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/home_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/red_bg"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Blood"
                android:fontFamily="@font/quesha"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_bg">

                <LinearLayout
                    android:id="@+id/i1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/oval"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_alignParentStart="true">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/patient"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/patient_problem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/i1"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:background="@drawable/input_bg"
                    android:hint="Patient problem"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_bg">

                <LinearLayout
                    android:id="@+id/i2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/oval"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_alignParentStart="true">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/blood_white"/>

                </LinearLayout>

                <Spinner
                    android:id="@+id/patient_blood_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/patient_blood_groups"
                    android:layout_toEndOf="@id/i2"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/input_bg">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/oval"
                    android:layout_marginStart="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/bag"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:text="Blood Quantity"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical"
                    android:paddingStart="0dp"
                    android:paddingEnd="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/decrease"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/remove_field"/>

                    <TextView
                        android:id="@+id/quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/colorLightRed"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>

                    <ImageView
                        android:id="@+id/increase"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/add"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_bg">

                <LinearLayout
                    android:id="@+id/i5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/oval"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_alignParentStart="true">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/call"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/patient_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/i5"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textSize="16sp"
                    android:background="@drawable/input_bg"
                    android:hint="Patient number"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_bg">

                <LinearLayout
                    android:id="@+id/i3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/oval"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_alignParentStart="true">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/hospital"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/hospital"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/i3"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:background="@drawable/input_bg"
                    android:hint="Hospital name"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_bg">

                <LinearLayout
                    android:id="@+id/i4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/oval"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_alignParentStart="true">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/location_white"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/hospital_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/i4"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:background="@drawable/input_bg"
                    android:hint="Hospital address"/>

            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/submit_blood_request"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/red_bg"
            android:layout_marginTop="15dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:fontFamily="@font/quesha"
            android:textColor="@color/colorWhite"
            android:textSize="26sp"/>

    </LinearLayout>

</RelativeLayout>